<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.BrosPage" Title="52">
    <StackLayout>
        <Label Text="Кликуха" />
        <Entry Text="{Binding Nick}" />
        <Label Text="Близость" />
        <Entry Text="{Binding Tier}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveBros" />
            <Button Text="Удалить" Clicked="Del" />
            <Button Text="Отмена" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>